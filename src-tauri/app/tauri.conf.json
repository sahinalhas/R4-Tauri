{
  "productName": "Rehber360",
  "version": "2.0.0",
  "identifier": "com.rehber360.app",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "cd ../.. && npm run build:frontend",
    "devUrl": "http://localhost:5000",
    "frontendDist": "../../dist/client"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": ["tr-TR", "en-US"]
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["Turkish", "English"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Rehber360",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "label": "main",
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "tooltip": "Rehber360"
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "notification": {
      "identifier": "com.rehber360.app"
    },
    "updater": {
      "active": false,
      "endpoints": [],
      "dialog": true,
      "pubkey": "",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
